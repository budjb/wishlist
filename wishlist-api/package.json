{
  "name": "wishlist-api",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "auth0": "^2.24.0",
    "aws-sdk": "^2.662.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-jwt": "^5.3.3",
    "jwks-rsa": "^1.8.0",
    "node-fetch": "^2.6.0",
    "uuid": "^7.0.3"
  },
  "scripts": {
    "start": "nodemon src/index.js",
    "build": "rm -rf build/ && mkdir build && cp -R src/* build/ && yarn install --production --modules-folder build/node_modules",
    "package": "rm -rf dist/ && mkdir dist && yarn build && (cd build && zip -qr9 ../dist/lambda.zip .)",
    "clean": "rm -rf dist/ build/",
    "format": "prettier --write \"**/*.+(js|jsx|json|css)\"",
    "format-check": "prettier --check \"**/*.+(js|jsx|json|css)\""
  },
  "devDependencies": {
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5"
  }
}
